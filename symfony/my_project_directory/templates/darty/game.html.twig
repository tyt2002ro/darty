            float: left;
            background: gray;
            color: white;
            border-radius: 5px;
            padding: 7px 0;
            margin-right: 1%;
            cursor: pointer;
        }

        .button:hover {
            background: lightgray;
            color: black;
        }

        .button-small {
            width: 31%;
        }

        .button-large {
            width: 47%;
        }

        .buttons-container {
            width: 50%;
            margin: auto;
        }

        .row {
            width: 100%;
            clear: both;
        }

        .cell {
            text-align: center;
            margin-bottom: 10px;
            float: left;
        }

        .cell-4 {
            width: 25%;
        }

        .cell-3 {
            width: 33%;
        }

        .cell-2 {
            width: 50%;
        }

        .cell-1 {
            width: 100%;
        }

        .cell-title {
            font-size: 21px;
        }

        .cell-fixed-height {
            height: 35px;
        }

        .cell-padding-top {
            padding-top: 10px;
        }

        .image {
            width: 16px;
        }

        .notice-container {
            text-align: center;
            border-color: red;
            border-width: 1px;
            border-style: solid;
            padding: 10px;
            margin: 25px;
            color: red;
            border-radius: 10px;
        }
    </style>

